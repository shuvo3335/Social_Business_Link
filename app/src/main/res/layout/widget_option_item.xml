<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginEnd="@dimen/margin_page_standard"
        android:layout_marginLeft="@dimen/margin_page_standard"
        android:layout_marginRight="@dimen/margin_page_standard"
        android:layout_marginStart="@dimen/margin_page_standard"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/option_item_widget_image_view_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_notifications_black_24dp"
            app:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/option_item_widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:text="Notification"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/option_item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6.0"
            android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
            android:paddingEnd="@dimen/medium"
            android:paddingRight="@dimen/medium"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/option_item_widget_image_view_chevron"
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:scaleType="fitEnd"
            android:src="@drawable/chevron_right"
            app:tint="@color/colorAccent" />
    </LinearLayout>
</LinearLayout>
